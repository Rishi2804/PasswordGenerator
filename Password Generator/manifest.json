{
    "name": "Password Generator",
    "description": "Generate strong customizable passwords that are storeable for your browser",
    "manifest_version": 3,
    "permissions": ["activeTab", "notifications", "storage", "alarms"],
    "version": "1.0",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "16": "images/icon16.png"
    }
}